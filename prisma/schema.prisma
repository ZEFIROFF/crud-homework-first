generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  username String @unique
  password String
  age Int @default(0) 
  description String? @db.Char(1000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([email])
  @@index([username])
}